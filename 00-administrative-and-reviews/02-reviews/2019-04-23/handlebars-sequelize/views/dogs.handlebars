<h1>Dogs!</h1>

<h2>Dogs that are not sleepy!</h2>

<ul>
  {{#each dogs}}
    {{#unless this.sleepy}}
      {{> dogs/dog-block id=this.id hungry=this.hungry sleepy=this.sleepy name=this.name }}
    {{/unless}}
  {{/each}}
</ul>

<h2>Dogs that are sleepy!</h2>

<ul>
  {{#each dogs}}
    {{#if this.sleepy}}
      {{> dogs/dog-block id=this.id hungry=this.hungry sleepy=this.sleepy name=this.name }}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Dog</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Dog Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <div class="form-group">
    <label for="hungry">Hungry?</label><br>
    <input type="radio" name="hungry" value="1" checked> Hungry!<br>
    <input type="radio" name="hungry" value="0"> Full
  </div>

  <button type="submit">Add Dog</button>
</form>
<script src="/assets/js/dogs.js"></script>